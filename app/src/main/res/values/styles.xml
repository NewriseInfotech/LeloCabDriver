<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="edit_text_style">
        <item name="android:background">@drawable/edittext_shape</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="login_button_style">
        <item name="android:text">Login</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="sign_up_button_style">
        <item name="android:text">SignUp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="submit_button_style">
        <item name="android:text">Submit</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Animation for dialog box -->
    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogSlideAnimZoom" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimationZoom</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="DialogAnimationZoom">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>


    <style name="commonTextViewMedium">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:padding">@dimen/_4dp</item>
    </style>

    <style name="commonTextViewLarge">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:padding">@dimen/_4dp</item>
    </style>

    <style name="commonTextViewSmall">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:padding">@dimen/_4dp</item>
    </style>

    <style name="ratingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_full</item>
        <item name="android:minHeight">23dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>

</resources>
