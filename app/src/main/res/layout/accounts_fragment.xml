<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data class="AccountsFragmentBinding">

        <variable
            name="dto"
            type="com.lelocabdriver.accounts.GetDriverStatisticsResponseModel" />
    </data>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_bg"
        android:orientation="vertical"
        android:padding="@dimen/_16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_shape"
                android:elevation="@dimen/_4dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/commonTextViewLarge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/today_s_ride_hours"
                    android:textColor="@android:color/black" />

                <TextView
                    style="@style/commonTextViewLarge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@{dto.todaysRideHours}"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8dp"
                android:background="@drawable/edittext_shape"
                android:elevation="@dimen/_4dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/commonTextViewLarge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/current_month_ride_hours"
                    android:textColor="@android:color/black" />

                <TextView
                    style="@style/commonTextViewLarge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@{dto.currentMonthRideHours}"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8dp"
                android:background="@drawable/edittext_shape"
                android:elevation="@dimen/_4dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/commonTextViewLarge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/today_s_login_hours"
                    android:textColor="@android:color/black" />

                <TextView
                    style="@style/commonTextViewLarge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@{dto.todaysLoginHours}"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8dp"
                android:background="@drawable/edittext_shape"
                android:elevation="@dimen/_4dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/commonTextViewLarge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/current_month_login_hours"
                    android:textColor="@android:color/black" />

                <TextView
                    style="@style/commonTextViewLarge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@{dto.currentMonthLoginHours}"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8dp"
                android:background="@drawable/edittext_shape"
                android:elevation="@dimen/_4dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/commonTextViewLarge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/today_s_distance"
                    android:textColor="@android:color/black" />

                <TextView
                    style="@style/commonTextViewLarge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text='@{dto.todaysDistance +" Km."}'
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8dp"
                android:background="@drawable/edittext_shape"
                android:elevation="@dimen/_4dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/commonTextViewLarge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/current_month_distance"
                    android:textColor="@android:color/black" />

                <TextView
                    style="@style/commonTextViewLarge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text='@{dto.currentMonthDistance+" Km."}'
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8dp"
                android:background="@drawable/edittext_shape"
                android:elevation="@dimen/_4dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/commonTextViewLarge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/today_s_income"
                    android:textColor="@android:color/black" />

                <TextView
                    style="@style/commonTextViewLarge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text='@{dto.todaysIncome +" Rs."}'
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8dp"
                android:background="@drawable/edittext_shape"
                android:elevation="@dimen/_4dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/commonTextViewLarge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/current_month_income"
                    android:textColor="@android:color/black" />

                <TextView
                    style="@style/commonTextViewLarge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text='@{dto.currentMonthIncome +" Rs."}'
                    android:textColor="@android:color/black" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>